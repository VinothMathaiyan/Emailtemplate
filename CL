<div id="tooltip-container">
  <duet-tooltip for="tooltip-target" position="top">
    Hello, Iâ€™m a tooltip! To close me you can hit ESC key, click the close button, or click the X button.
  </duet-tooltip>
  <button id="tooltip-target">Hover or focus me</button>
</div>

<script>
  Qualtrics.SurveyEngine.addOnload(function() {
    // Initialize the tooltip
    const tooltip = document.querySelector('duet-tooltip');
    const target = document.getElementById('tooltip-target');

    // Show the tooltip when the target is focused or hovered
    target.addEventListener('focus', () => {
      tooltip.show();
    });

    target.addEventListener('blur', () => {
      tooltip.hide();
    });

    target.addEventListener('mouseenter', () => {
      tooltip.show();
    });

    target.addEventListener('mouseleave', () => {
      tooltip.hide();
    });
  });
</script>
