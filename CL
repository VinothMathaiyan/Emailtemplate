# Define custom keyword expansion dictionary (Modify as needed)
keyword_dict = {
    "holiday": ["leave", "vacation"],
    "payroll": ["salary", "wages"],
    "workday": ["HR system", "platform"],
}

# Function to expand text using synonyms
def expand_text(text):
    words = text.split()
    expanded_words = []
    for word in words:
        if word.lower() in keyword_dict:
            expanded_words.append(word)
            expanded_words.extend(keyword_dict[word.lower()])  # Add synonyms
        else:
            expanded_words.append(word)
    return " ".join(expanded_words)

# Apply expansion to responses
df_1234["Expanded Response"] = df_1234["Response"].astype(str).apply(expand_text)
df_5678["Expanded Response"] = df_5678["Response"].astype(str).apply(expand_text)
