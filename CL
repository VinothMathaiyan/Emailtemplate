import pandas as pd
import os
from datetime import datetime
from openpyxl import load_workbook

# List of Excel files to combine
excel_files = ["file1.xlsx", "file2.xlsx", "file3.xlsx"]  # Update with your actual file names

# Output file name
output_file = "combined_file.xlsx"
master_sheet = "Master"  # Define the sheet name

# Read and combine all files
all_data = []

for file in excel_files:
    if os.path.exists(file):  # Check if the file exists
        df = pd.read_excel(file)
        file_name_without_extension = os.path.splitext(file)[0]  # Remove the file extension (.xlsx)
        df["File Name"] = file_name_without_extension  # Add file name without extension
        df["Date Updated"] = datetime.now().strftime("%Y-%m-%d %H:%M:%S")  # Add timestamp
        all_data.append(df)

# Combine all DataFrames into one
final_df = pd.concat(all_data, ignore_index=True)

# Check if the output file already exists
if os.path.exists(output_file):
    existing_df = pd.read_excel(output_file, sheet_name=master_sheet)  # Read only the Master sheet
    final_df = pd.concat([existing_df, final_df], ignore_index=True)  # Append new data

# Save the final combined file with the specified sheet name
with pd.ExcelWriter(output_file, engine='openpyxl', mode='w') as writer:
    final_df.to_excel(writer, sheet_name=master_sheet, index=False)

# Load the combined Excel file using openpyxl to adjust column widths
wb = load_workbook(output_file)
ws = wb[master_sheet]

# Increase the width of all columns (adjust width as needed)
for col in ws.columns:
    max_length = 0
    column = col[0].column_letter  # Get column name (A, B, C, etc.)
    for cell in col:
        try:
            if cell.value and len(str(cell.value)) > max_length:
                max_length = len(str(cell.value))
        except:
            pass
    adjusted_width = max_length + 2
    ws.column_dimensions[column].width = adjusted_width

# Save the file after adjusting the column widths
wb.save(output_file)

print(f"Successfully combined and adjusted column widths in '{output_file}' (Sheet: '{master_sheet}').")
