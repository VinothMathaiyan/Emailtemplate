<label for="date">Choose a date</label>
<input type="date" id="date" />

Qualtrics.SurveyEngine.addOnload(function() {
  // Convert input to Duet Date Picker once the script is loaded
  const input = document.getElementById('date');
  const duetDatePicker = document.createElement('duet-date-picker');
  duetDatePicker.identifier = 'date';
  duetDatePicker.value = input.value;
  duetDatePicker.localization = {
    placeholder: "mm/dd/yyyy", // Set placeholder
    dateFormat: "MM/DD/YYYY"   // Set date format
  };
  input.parentNode.replaceChild(duetDatePicker, input);
});

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@duetds/date-picker@1.4.0/dist/duet/themes/default.css" />
<script type="module" src="https://cdn.jsdelivr.net/npm/@duetds/date-picker@1.4.0/dist/duet/duet.esm.js"></script>
<script nomodule src="https://cdn.jsdelivr.net/npm/@duetds/date-picker@1.4.0/dist/duet/duet.js"></script>

<style>
  .duet-date__input {
    width: 75%;
  }
</style>
