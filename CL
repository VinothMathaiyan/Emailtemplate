import pandas as pd

def replace_keywords(response, keyword_dict):
    for key, values in keyword_dict.items():
        for value in values:
            response = response.replace(value, key)
    return response

# Example usage with a DataFrame
data = {'Response': ['I need a vacation and have a booking for it.', 
                     'The reservation is for my holiday.']}
df = pd.DataFrame(data)

keyword_dict = {'leave': ['vacation', 'holiday'], 'booking': ['scheduling', 'reservation']}
df['Expanded Response'] = df['Response'].astype(str).apply(lambda x: replace_keywords(x, keyword_dict))

print(df)
