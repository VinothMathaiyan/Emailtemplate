<label for="date">Choose a date</label>
<div class="date-container">
  <input type="text" id="date" placeholder="mm/dd/yyyy" style="width: 75%;" />
  <span class="calendar-icon">&#128197;</span> <!-- Unicode for calendar icon -->
</div>

<script>
  Qualtrics.SurveyEngine.addOnload(function() {
    const input = document.getElementById('date');
    const calendarIcon = document.querySelector('.calendar-icon');
    
    input.addEventListener('focus', function() {
      this.type = 'date';
      this.placeholder = 'yyyy-mm-dd';
      calendarIcon.style.visibility = 'visible';
    });

    input.addEventListener('blur', function() {
      this.type = 'text';
      this.placeholder = 'mm/dd/yyyy';
      calendarIcon.style.visibility = 'hidden';
    });

    // Initially hide the calendar icon
    calendarIcon.style.visibility = 'hidden';
  });
</script>

<style>
  .date-container {
    position: relative;
    display: inline-block;
  }
  
  #date {
    width: 75%;
    padding-right: 30px; /* To accommodate the calendar icon */
  }

  .calendar-icon {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    visibility: hidden; /* Initially hidden */
  }

  #date:focus + .calendar-icon {
    visibility: visible;
  }
</style>
