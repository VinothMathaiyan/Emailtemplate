from openpyxl import load_workbook
from openpyxl.styles import Alignment

# Open the existing file
wb = load_workbook(file_path)

# Function to adjust column width and wrap text
def format_excel_sheet(sheet_name):
    ws = wb[sheet_name]

    # Adjust column width
    for col in ws.columns:
        max_length = 0
        col_letter = col[0].column_letter  # Get column letter
        for cell in col:
            try:
                if cell.value:
                    max_length = max(max_length, len(str(cell.value)))
            except:
                pass
        adjusted_width = min(max_length + 2, 50)  # Limit width to avoid excessive stretch
        ws.column_dimensions[col_letter].width = adjusted_width

    # Apply text wrapping for "Stages" column
    for row in ws.iter_rows():
        for cell in row:
            if cell.column_letter == 'C':  # Change 'C' to correct column letter if needed
                cell.alignment = Alignment(wrap_text=True)

# Apply formatting to both sheets
format_excel_sheet("1234")
format_excel_sheet("5678")

# Save the formatted file
wb.save(file_path)
print(f"Excel formatting applied. File saved as '{file_path}'.")

